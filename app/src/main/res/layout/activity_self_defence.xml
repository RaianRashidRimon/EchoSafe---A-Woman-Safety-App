<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Header with bird icon and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bird_icon"
                android:layout_width="81dp"
                android:layout_height="100dp"
                android:src="@drawable/bird_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Self Defence"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Space between header and button -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Heading -->
        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/self_defense_heading"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center" />

        <!-- Subheading -->
        <TextView
            android:id="@+id/subHeadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_heading"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp" />

        <!-- Step 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip1_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/vulnerable_places_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip1_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <!-- Gap between steps -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Step 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip2_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/simple_effective_moves_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip2_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />

        <!-- Gap between steps -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Step 3 -->

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebackground"
    tools:context=".MainActivity">

    <!-- Panic and Siren Buttons -->

    <Button
        android:id="@+id/whereamiButton"
        style="@style/CustomButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Where am I?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addContactButton"
        app:layout_constraintVertical_bias="0.84" />

    <Button
        android:id="@+id/panicButton"
        style="@style/CustomButtonStyle"
    android:layout_width="171dp"
    android:layout_height="174dp"
    android:layout_margin="16dp"
    android:text="SOS"
    android:elevation="100dp"
    android:textColor="#FFFFFF"
    android:textSize="25sp"
    app:layout_constraintEnd_toStartOf="@+id/sirenButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/sirenButton"
        style="@style/CustomButtonStyle"
        android:layout_width="171dp"
        android:layout_height="174dp"
        android:layout_margin="16dp"
        android:text="Siren"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/panicButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- View Contacts and Add New Contact Buttons -->

    <Button
        android:id="@+id/viewContactsButton"
        style="@style/CustomButtonStyle"
        android:layout_width="0dp"
        android:elevation="6dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:text="View Contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addContactButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panicButton"
        app:layout_constraintVertical_bias="0.321" />

    <!-- Self Defense and Helplines Buttons -->

    <Button
        android:id="@+id/addContactButton"
        style="@style/CustomButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="204dp"
        android:text="Record Audio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewContactsButton"
        app:layout_constraintTop_toBottomOf="@id/sirenButton"
        app:layout_constraintVertical_bias="0.318" />

    <Button
        android:id="@+id/selfDefenseButton"
        style="@style/CustomButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:text="Self Defense"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/helplineButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewContactsButton"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/helplineButton"
        style="@style/CustomButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Helplines"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/selfDefenseButton"
        app:layout_constraintTop_toBottomOf="@id/addContactButton"
        app:layout_constraintVertical_bias="0.073" />

    <Button
        android:id="@+id/initiatefakecallButton"
        style="@style/CustomButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Initiate Fake Call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addContactButton"
        app:layout_constraintVertical_bias="0.599" />

</androidx.constraintlayout.widget.ConstraintLayout>
